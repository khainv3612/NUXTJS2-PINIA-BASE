{
	"name": "base",
	"author": "khainv",
	"version": "1.0.0",
	"private": true,
	"scripts": {
		"dev": "nuxt",
		"build": "nuxt build",
		"start": "nuxt start",
		"generate": "nuxt generate",
		"lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
		"lint:prettier": "prettier --write  '**/*.{js,ts,jsx,tsx,css,less,scss,vue,html,md}'",
		"lint:stylelint": "stylelint --cache --fix \"**/*.{vue,less,postcss,css,scss}\" --cache --cache-location node_modules/.cache/stylelint/",
		"lint:lint-staged": "lint-staged",
		"prepare": "husky install"
	},
	"lint-staged": {
		"*.{js,jsx,ts,tsx,vue,html}": [
			"eslint . --ext .vue,.js,.jsx,.ts,.tsx,.html --fix --ignore-path .gitignore",
			"prettier --write  '**/*.{js,ts,jsx,tsx,vue,html,md}'",
			"stylelint --cache --fix \"**/*.{vue}\" --cache --cache-location node_modules/.cache/stylelint/"
		],
		"*.{scss,less}": [
			"prettier --write  '**/*.{css,less,scss}'",
			"stylelint --cache --fix \"**/*.{less,postcss,css,scss}\" --cache --cache-location node_modules/.cache/stylelint/"
		],
		"{!(package)*.json,*.code-snippets,.!(browserslist)*rc}": [
			"prettier --write"
		],
		"package.json": [
			"prettier --write"
		],
		"*.md": [
			"prettier --write"
		]
	},
	"browserslist": [
		"> 1%",
		"not ie 11",
		"not op_mini all"
	],
	"dependencies": {
		"@nuxt/types": "^2.16.0",
		"@nuxtjs/auth": "^4.9.1",
		"@nuxtjs/axios": "^5.13.6",
		"@nuxtjs/composition-api": "^0.33.1",
		"@nuxtjs/recaptcha": "^1.1.1",
		"@pinia/nuxt": "0.4.6",
		"@ssthouse/vue-tree-chart": "^0.6.8",
		"@vue/composition-api": "^1.7.1",
		"aos": "^2.3.4",
		"cookie-universal-nuxt": "^2.2.2",
		"core-js": "^3.19.3",
		"element-ui": "^2.15.12",
		"js-cookie": "3.0.1",
		"lodash": "^4.17.21",
		"moment": "^2.29.4",
		"nuxt": "^2.16.0",
		"pinia": "^2.0.30",
		"vue": "^2.7.14",
		"vue-i18n": "^8.28.2",
		"vue-router": "3.6.5",
		"vue-server-renderer": "^2.7.14",
		"vue-slick-carousel": "^1.0.6",
		"vue-template-compiler": "^2.7.14",
		"vue2-org-tree": "^1.3.6",
		"webpack": "^4.46.0"
	},
	"devDependencies": {
		"@babel/eslint-parser": "^7.16.3",
		"@commitlint/cli": "^15.0.0",
		"@commitlint/config-conventional": "^15.0.0",
		"@nuxtjs/device": "^3.0.0",
		"@nuxtjs/dotenv": "^1.4.1",
		"@nuxtjs/eslint-config": "^8.0.0",
		"@nuxtjs/eslint-module": "^3.0.2",
		"@nuxtjs/stylelint-module": "^4.1.0",
		"@vueuse/head": "^1.0.24",
		"autoprefixer": "^10.4.13",
		"eslint": "^8.34.0",
		"eslint-config-prettier": "^8.6.0",
		"eslint-config-standard": "^17.0.0",
		"eslint-plugin-n": "^15.6.1",
		"eslint-plugin-nuxt": "^3.1.0",
		"eslint-plugin-vue": "^9.9.0",
		"husky": "^8.0.3",
		"lint-staged": "^13.1.2",
		"postcss": "^8.4.21",
		"postcss-html": "^1.5.0",
		"prettier": "^2.8.4",
		"sass": "^1.43.4",
		"sass-loader": "10",
		"stylelint": "^15.1.0",
		"stylelint-config-prettier": "^9.0.5",
		"stylelint-config-recommended-vue": "^1.1.0",
		"stylelint-config-standard": "^30.0.1",
		"tailwindcss": "^3.2.4"
	},
	"pnpm": {
		"peerDependencyRules": {
			"ignoreMissing": [
				"tailwindcss",
				"vue"
			]
		}
	},
	"engines": {
		"pnpm": ">= 6 <8"
	}
}
